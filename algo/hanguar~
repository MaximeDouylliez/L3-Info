set PROD;

param rendement{PROD}>=0;
param consomationv{PROD}>=0;
param consomationm{PROD}>=0;
param prix_vente{PROD}>=0;
param vente_max{PROD}>=0;
param surface_totale>=0;
param hangar>=0;


var vache integer;
var mouton integer;
var surface_dedie {p in PROD}>=0;
var qte_produite {p in PROD}=surface_dedie[p]*rendement[p];
var qte_consome {p in PROD}=vache *consomationv[p] +mouton*consomationm[p];
var qte_restante {p in PROD}= (qte_produite[p]-qte_consome[p]);

set BETE;

param valeur{BETE}>=0;
param occupation_are{BETE}>=0
param encombrement_hangar{BETE}>=0;

var used binary{b in BETE}>=0;
var qte {b in BETE}>=0;
;









maximize profit :
(sum{p in PROD} (qte_restante[p])*prix_vente[p])+ (sum{b in BETE}(valeur[b]*qte[b]*used[b]);

subject to surface_limité :
(sum{p in PROD} surface_dedie[p])+(sum{b in BETE} qte[b]*occupation_are[b] )<=surface_totale;

subject to vente_limite {p in PROD} : qte_restante[p]<=vente_max[p];

subject to sustentation {p in PROD}:
qte_produite[p] >=  qte[vache]*consomationv[p]+qte[mouton]*consomationm[p];

subject to condi:
(sum{b in bete}used[b])=1;






data;
set BETE := vache mouton;
param valeur encombrement_hangar occupation_are
vache 200 1/20 2
mouton 150 1/29 1;




set PROD := betterave blé maïs;
param surface_totale :=200;
param hangar :=5;
param: rendement consomationv consomationm  vente_max prix_vente :=
betterave 1           0.6        0.8           10      100    
blé       0.6         0.2        1              20       120
maïs      0.5         0.2        0.3            20       90;
