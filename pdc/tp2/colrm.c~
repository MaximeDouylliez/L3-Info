#include "util.h"


void
colrm
( int argv1,int argv2)
{
  int indice,sortie;
  char* buffer_ligne;
  sortie=0;
  buffer_ligne=malloc(MAX_LINE * sizeof(char));
 

  if(argv2==-1) /*evite la duplication de code, voir le test de colonne*/
    argv2=argv1;
   while (sortie!=EOF)

     {
sortie=readl(buffer_ligne);
         lister_tableau(buffer_ligne);
      for(indice=0;buffer_ligne[indice]!='\n';indice++)
	{
	  if(!(indice<=argv1) && !(indice>=argv2))
/*gere l'appel a 1 et 2 arguments*/
	    {
	      printf("%c",buffer_ligne[indice]);
	    }
	}
      putchar('\n');
    }
}


int
main 
(int argc, char *argv[])
{

  int i;
  fatal(((argc<1 || argc >3)),"Nombre d'arguments invalide",2);

  for (i=1;i<argc;i++)
    {
      printf("%d",atoi(argv[i]));
    }

  if(argc==1)
    {
      colrm(atoi(argv[1]),atoi("-1"));
    }
  else
    {
      colrm(atoi(argv[1]),atoi(argv[2]));
    }

  return 0;
}


